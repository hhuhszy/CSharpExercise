<Window x:Class="AsyncDemo.AnotherWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AsyncDemo"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="480"
             Height="220" Width="480">
    <Border BorderThickness="2" BorderBrush="Blue" CornerRadius="10">
        <StackPanel>
            <Button x:Name="btn_StartStopResume" Content="Start" Margin="0,20" Click="btn_StartStopResume_Click"/>
            <ProgressBar x:Name="progressBar1" Height="25"/>
            <Button x:Name="btn_Reset" Content="Reset" IsEnabled="False" Margin="0,20,0,0"/>
            <TextBlock x:Name="txtBlock" Text="Find Prime Number" Margin="0,20,0,0" TextAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>
