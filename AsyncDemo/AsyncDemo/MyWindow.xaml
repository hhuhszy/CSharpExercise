<Window x:Class="AsyncDemo.MyWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AsyncDemo"
             mc:Ignorable="d" 
             d:DesignHeight="250"
             Height="250" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Button Height="30" x:Name="btn1" Margin="120,10,120,0" Content="Start"
                    FontSize="20" Click="StartDownload"/>
            <Button Height="30" x:Name="btn2" Margin="120,10,120,0" Content="Cancel"
                    FontSize="20" Click="CancelDownload" IsEnabled="False"/>
            <Button Height="30" x:Name="btn3" Margin="120,10,120,0" Content="DelayTask"
                    FontSize="20" Click="DelayTaskAsync"/>
            <Label x:Name="lbl1" Content="label" HorizontalContentAlignment="Center"
                   Margin="0,25,0,0" FontSize="20"/>
            <Button x:Name="btn4" Content="Another ModelWindow" Click="AnotherModelWindow" />
        </StackPanel>
    </Grid>
</Window>
